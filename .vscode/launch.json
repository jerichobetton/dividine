  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "backend",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/app.js",
      "envFile": "${workspaceFolder}/backend/.env"
